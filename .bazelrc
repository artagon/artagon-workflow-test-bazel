# Bazel configuration for test repository

# Coverage configuration
build:coverage --combined_report=lcov
build:coverage --instrumentation_filter="//..."
build:coverage --instrument_test_targets
coverage:coverage --combined_report=lcov
coverage:coverage --instrumentation_filter="//..."
coverage:coverage --instrument_test_targets

# Common test configuration
test --test_output=errors
test --test_summary=detailed

# Build optimization
build --incompatible_strict_action_env
build --host_force_python=PY3
